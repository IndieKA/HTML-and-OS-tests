            ellipse(296,285,30,30);
            fill(255, 255, 255);
            rect(285,281,10,7);
            triangle(295, 274, 307, 285, 295, 295);
            textAlign(LEFT,LEFT);
            fill(66, 66, 66);
            textSize(13);
            text(loginTxT,135,289);
            if(mouseXYPOS(130,270,130+135,270+30)){
                passwordText = false;
            }
            if(!mouseXYPOS(130,270,130+135,270+30)){
                passwordText = true;
            }
            if(!mouseXYPOS(130,270,130+135,270+30) && loginTxT.length>0){
                passwordText = false;
            }
            if(passwordText === true){
                textAlign(LEFT,LEFT);
                textSize(13);
                fill(171, 171, 171);
                text("Password",135,289);
            }
            if(loginTxT === data.Password){
                passwordLives = 1;
            }
            if(loginTxT !== data.Password && passwordLives === 2){
                passwordLives = 0;
            }
            if(keys[20]){
                caps = true;
            }else{
                caps = false;
            }
            if(caps === true){
                fill(255, 255, 255);
                text("Caps Lock is ON",149,318);
            }
            
            
            fill(4, 164, 212);
            pushMatrix();
                scale(0.5);
                translate(400, 370);
                arc(0, 0, 150, 150, -180, 0);
                ellipse(0, -140, 100, 100);
