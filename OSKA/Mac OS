            textSize(20);
            textAlign(LEFT,LEFT);
            fill(255, 255, 255);
            text("Windows 7",110,387);
            textSize(15);
            text("Home Premium",212,387);
            textAlign(CENTER,CENTER);
            textSize(31);
            text("ERROR! The password was\nincorrect. You have 3 lives\ntotal.",200,163);
            textSize(20);
            fill(0, 0, 0);
            rect(167,226,70,25,10);
            fill(255, 255, 255);
            text("OK",200,239);
            if(mouseXYPOS(167,226,167+70,226+25)){
                screen = "Login";
                passwordLives = 2;
            }
        break;  
        case "Desktop":
            image(getImage("food/cake"),0,0,400,400);
            fill(255, 255, 255,110);
            rect(0,364,401,36);
            ellipse(19,381.5,32,32);
            fill(255, 255, 255);
            textSize(13);
            text(time[0] + ":" + zero + time[1] + " " + ap,350,387);
            if(time === "MM-DD-YYYY"){
                text(time[4] + "/"  + time[3] + "/" + time[5],343,400);
            }
            if(time[1]<10){
                zero = "0";
            }else{
                zero = "";
            }
            resetMatrix();
            textSize(45);
            fill(254, 255, 166);
            rect(92,369,32,28,5);
            fill(0, 0, 0);
            textSize(25);
            text("F",101,394);
            scale(0.26,0.26);
            translate(-1,1320);
            macLogo();
            resetMatrix();
            if(mouseXYPOS(90,365,90+35,365+35)){
                libraries = true;
            }
            if(mouseXYPOS(48,365,48+35,365+35)){
                internet = true;
            }
            if(mouseXYPOS(2,365,2+35,365+35)){
                startb = true;
            }
            if(!mouseXYPOS(0,85,0+176,85+278) && !mouseXYPOS(2,365,2+35,365+35) && !mouseXYPOS(167,289,167+50,289+30) && !mouseXYPOS(167,319,167+50,319+30)){
                startb = false;
                options = false;
            }
            if(internet === true){
                tabname = "New Tab";
                fill(240, 240, 240, 200);
                rect(0,33,400,331);
                fill(255, 255, 255);
                quad(29,10,0,33,100,33,71,10);
                closeButton(99,-100,0,0,100,-100);
                fill(0, 0, 0);
                textSize(11);
                text(tabname,32,29);
                textSize(20);
                text("Apps",180,64);
                fill(0, 230, 192);
                triangle(44, 150, 44, 100, 88, 125);
                fill(255, 0, 0,200);
                triangle(44, 150, 73, 116, 88, 125);
                fill(225, 255, 0,190);
                triangle(73, 133, 44, 100, 88, 125);
                fill(0, 0, 0);
                textSize(15);
                text("Google Play",30,168);
                text("Youtube",143,168);
