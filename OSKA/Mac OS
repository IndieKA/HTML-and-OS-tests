                    internet = false;
                }
            }
            if(gplay === true){
                tabname = "Google Play";
                fill(240, 240, 240, 200);
                rect(0,33,400,331);
                fill(255, 255, 255);
                quad(29,10,0,33,100,33,71,10);
                closeButton(100,-100,0,0,100,-100);
                fill(0, 0, 0);
                textSize(11);
                text(tabname,24,24);
                fill(189, 189, 189);
                rect(0,33,400,40);
                scale(0.5,0.5);
                translate(-23,-16);
                fill(0, 255, 213);
                triangle(44, 150, 44, 100, 88, 125);
                fill(255, 0, 0,200);
                triangle(44, 150, 73, 116, 88, 125);
                fill(225, 255, 0,190);
                triangle(73, 133, 44, 100, 88, 125);
                resetMatrix();
