                textSize(11);
                text(tabname,32,24);
                fill(224, 224, 224);
                rect(0,33,400,40);
                textSize(18);
                fill(0, 0, 0);
                text("You",14,58);
                fill(250, 68, 68);
                rect(49,38,52,30,10);
                fill(255, 255, 255);
                text("Tube",58,58);
                fill(196, 196, 196);
                rect(109,41,200,25);
