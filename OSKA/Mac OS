var time = "MM-DD-YYYY";
var data = {
    Username: "Guest",
    Password: "login",
};
var screen = "Login";
var load = 0;
var loginTxT = "";
var mX;
var mY;
var passwordLives = 2;
var caps = false;
var trigger = 0;
