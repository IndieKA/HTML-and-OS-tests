                screen = "Desktop";
            }
            if(mouseXYPOS(280,268,280+32,268+32) && passwordLives === 0){
                screen = "Password Incorrect";
            }
            if(keys[10] && passwordLives === 1){
                screen = "Desktop";
            }
            if(keys[10] && passwordLives === 0){
                screen = "Password Incorrect";
            }
        break;  
        case "Password Incorrect":
            background(0, 0, 0);
